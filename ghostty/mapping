# https://ghostty.org/docs/config/keybind
#
# Valid modifiers are:
#     shift
#     ctrl   (alias: control)
#     alt    (alias: opt, option)
#     super  (alias: cmd, command)


# Reload config
keybind = ctrl+shift+,=reload_config

# open new window
keybind = alt+n=new_window

# font size
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+equal=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+/=reset_font_size

# copy/paste
keybind = alt+c=copy_to_clipboard
keybind = alt+v=paste_from_clipboard
keybind = alt+s=paste_from_selection

# quit
# keybind = ctrl+shift+q=quit

# screen: scroll,select,clear
keybind = ctrl+shift+]=scroll_page_up
keybind = ctrl+shift+[=scroll_page_down
keybind = ctrl+shift+c=clear_screen


